{
	"name": "r-a-dio/site",
	"description": "R/a/dio's website.",
	"keywords": ["music", "anime", "r/a/dio"],
	"license": "MIT",
	"authors": [
		{
			"name": "David Collinson",
			"email": "hiroto@hiroto.eu"
		}
	],
	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/hiro/profiler"
		},
		{
			"type": "git",
			"url": "https://github.com/hiro/php-markdown"
		}
	],
	"require": {
		"laravel/framework": "4.1.*",
		"raven/raven": "0.7.1",
		"loic-sharma/profiler": "dev-master",
		"hiro/laravel-hashing": "dev-radio",
		"ezyang/htmlpurifier": "4.6.0",
		"michelf/php-markdown": "dev-lib"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
